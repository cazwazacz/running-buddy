<h1 id="heading">Running Buddy</h1>

<% @users.each do |user| %>
  <% if current_user && user.id != current_user.id %>
    <div>
      <%= user.username %>
      <% if current_user.requested?(user.id) %>
        <button class="request-button" disabled> Request sent </button>
      <% else %>
        <button class="request-button" id="<%="#{current_user.id}-#{user.id}"%>"> Run with me! </button>
      <% end %>
    </div>
  <% end %>
<% end %>
